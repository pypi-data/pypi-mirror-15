<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content"
           class="content custom-content-alternative-view"
           i18n:domain="kotti_site_settings">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">All Site Settings</h3>
      </div>
      <div class="table-responsive">
        <table class="table result-table">
          <thead>
            <tr>
              <th class="settings">Settings</th>
              <th class="date-added">Date Created</th>
              <th class="updated-by">Updated by</th>
              <th class="views">View</th>
            </tr>
          </thead>
          <tbody>
            <tr tal:repeat="setting settings">
              <td class="setting">${setting.title}</td>
              <td class="date-added">${setting.creation_date.strftime("%A %d. %B %Y")}</td>
              <td class="updated-by">${setting.editor.title | ""}</td>
              <td class="view">
                <a href="${setting.path}" class="btn btn-primary btn-md">
                  View
                </a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

  </article>
</html>
