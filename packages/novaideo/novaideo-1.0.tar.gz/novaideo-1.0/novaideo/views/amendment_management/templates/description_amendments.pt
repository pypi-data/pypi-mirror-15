<div tal:condition="amendment is not None" i18n:domain="novaideo">
    <h3 class="content-title"><a tal:attributes="href request.resource_url(amendment, '@@index')">${amendment.title}</a> 
     <span tal:condition="is_proposal" style="color: #ef3128" i18n:translate="">(original version)</span>
    </h3>
  <div tal:condition="not is_proposal" class="object-description">
     <small><span  i18n:translate="">(Amended version by</span> <a tal:attributes="href request.resource_url(amendment.author, '@@index')">${((amendment.author is current_user) and 'Vous') or amendment.author.name}</a> <span  i18n:translate="">the</span> <span tal:replace="layout.to_localized_time(amendment.created_at)"/> (UTC) <span  i18n:translate="">of the proposal</span> <a tal:attributes="href request.resource_url(amendment.proposal, '@@index')">${amendment.proposal.title}</a><span tal:omit-tag="" tal:condition="amendment.originalentity is not None"><span  i18n:translate="">, duplicated from the amended version</span> <a tal:attributes="href request.resource_url(amendment.originalentity, '@@index')">${amendment.originalentity.title}</a></span>)
     </small>
     <div class="amendment-vote-justification">
       <dl tal:define="justification getattr(amendment, 'justification', '')">
        <dt tal:condition="justification" i18n:translate="">Justification</dt>
        <dd tal:condition="justification">${justification}</dd>
       </dl>
     </div>
  </div>
  <div tal:condition="is_proposal" class="object-description">
   <small><span  i18n:translate="">(Original version by</span> <a tal:attributes="href request.resource_url(amendment.author, '@@index')">${((amendment.author is current_user) and 'Vous') or amendment.author.name}</a> <span  i18n:translate="">proposed the</span> <span tal:replace="layout.to_localized_time(amendment.created_at)"/> (UTC) <span tal:omit-tag="" tal:condition="amendment.originalentity is not None"><span  i18n:translate="">, duplicated from the proposal</span> <a tal:attributes="href request.resource_url(amendment.originalentity, '@@index')">${amendment.originalentity.title}</a></span>)
   </small>
  </div>

   <div class="scroll-able trimmed-text ${is_proposal and 'proposal-trimmed-text' or 'amendment-trimmed-text'}">
    ${structure:text}
   </div>
</div>

