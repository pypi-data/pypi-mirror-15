<metal:macro use-macro="master">
  <metal:slot fill-slot="body">
    <p tal:condition="logged_in" class="pull-right">
      <a href="${request.application_url}/logout">Logout</a>
    </p>
    <div>
      The details of the OLD called “${old.name}” will go here.
    </div>
    <p>
      <a tal:attributes="href edit_url" href="">
        Edit this OLD
      </a>
    </p>
    <p>
        Viewing <strong><span tal:replace="old.name">
        OLD Name Goes Here</span></strong>
    </p>
    <p>You can return to the
      <a href="${request.application_url}">Senex main page</a>.
    </p>
  </metal:slot>
</metal:macro>
