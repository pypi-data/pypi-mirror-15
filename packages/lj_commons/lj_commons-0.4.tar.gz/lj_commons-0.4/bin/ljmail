#! /usr/bin/env python
import optparse

default_subject = "A Test Mail Subject"
default_body = "body.md"

parser = optparse.OptionParser()

parser.add_option('-s', '--subject', action="store", dest="subject", help="Add the email subject(Default: %s)" % default_subject)
parser.add_option('-b', '--body', action="store", dest="body", help="Attach the email markdown body(Default: %s)" % default_body)

parser.set_defaults(subject=default_subject,
                    body=default_body)

options, args = parser.parse_args()

from lj_commons import luoji_mail
luoji_mail(subject=options.subject,
           body_file=options.body)
