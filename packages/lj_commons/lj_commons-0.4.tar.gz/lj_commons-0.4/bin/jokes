#!/usr/bin/env python

import sys
import lj_commons

if len(sys.argv) < 2:
    print 'No action specified.'
    sys.exit()

if sys.argv[1].startswith('--'):
    option = sys.argv[1][2:]
    if option == 'version':
        print 'Version 1.2'
    elif option == 'help':
        print '''
        This program is a demo:
            --version : Prints the version
            --help : Prints useful info
        '''
    else:
        print 'Unknow option'

    sys.exit()

print lj_commons.joke(words=sys.argv[1])
